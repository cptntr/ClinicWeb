@model IEnumerable<Clinic.Web.BLL.ViewModels.DoctorsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorNS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialties)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (item.Removed == true)
                {
                    <td style="color: crimson">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td style="color: crimson">
                        @Html.DisplayFor(modelItem => item.DoctorNS)
                    </td>
                    <td style="color: crimson">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td style="color: crimson">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td style="color: crimson">
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td style="color: crimson">
                        @Html.DisplayFor(modelItem => item.Specialties)
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoctorNS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialties)
                    </td>
                }
                @if (item.Removed == true)
                {
                    <td style="color:brown">
                        Record removed
                    </td>
                }
                else
                {
                    <td style="visibility:visible">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
